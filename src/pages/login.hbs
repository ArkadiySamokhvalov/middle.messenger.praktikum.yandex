---
stylesheets:
  - ../scss/pages/form-page.scss
title: Авторизация
uri: /login
---

{{#extend "base"}}
  {{#content "header"}}
    <header class="header">
      <div class="header__content container">
        {{> logo}}
      </div>
    </header>
  {{/content}}
  {{#content "main"}}
    <main class="main">
      <h1 class="title">Авторизация</h1>
      <form class="form">
        {{> control name="login" label="Логин"}}
        {{> control_pass name="password" label="Пароль" value=""}}
        {{> btn_primary text="Войти"}}
        {{> link class="form__link" text="Нет аккаунта?" href="./signup.hbs"}}
      </form>
    </main>
  {{/content}}
{{/extend}}